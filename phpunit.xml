<phpunit
    bootstrap="bootstrap.php"
    >
    <testsuites>
        <testsuite name="ZendApp">
            <directory>ZendApp</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-text" target="php://stdout"/>
    </logging>
    <filter>
        <whitelist  processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./</directory>
        </whitelist>
    </filter>
</phpunit>
